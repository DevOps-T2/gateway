{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
  },

  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "solvers-app-service",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/solvers/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT", "PATCH" ],
      "SwaggerKey": "solvers"
    },

    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "quotas-app",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/quotas/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT", "PATCH" ],
      "SwaggerKey": "quotas"
    },

    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "monitor-app",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/monitor/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT", "PATCH" ],
      "SwaggerKey": "monitor"
    }

  ],

  "SwaggerEndPoints": [
    {
      "Key": "solvers",
      "Config": [
        {
          "Name": "Solvers API",
          "Version": "v1",
          "Url": "http://solvers-app-service/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "quotas",
      "Config": [
        {
          "Name": "Quotas API",
          "Version": "v1",
          "Url": "http://35.233.122.195/openapi.json"
        }
      ]
    },
    {
      "Key": "monitor",
      "Config": [
        {
          "Name": "Monitor API",
          "Version": "v1",
          "Url": "http://monitor-app/openapi.json"
        }
      ]
    }
  ]
}
